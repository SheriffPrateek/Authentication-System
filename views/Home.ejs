<body>
  
    
   <form action="/news" method="get" autocomplete="off">
   <div class="input-group mb-3" id="div1">
    <input name="newsfield" class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Type to search...">
    <datalist id="datalistOptions">
      <option value="Technology">
      <option value="Bussiness">
      <option value="Politics">
      <option value="Science">
    </datalist>
    <button type="submit" class="btn btn-outline-secondary" style="margin-right: 5px;" id="button-addon2">Button</button>
   </div>
   </form>
  
  <div class="container">
    <% const res=result.data.articles; 
